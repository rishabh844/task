<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_happid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_round"
            android:src="@drawable/ic_baseline_account_circle_24" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Happid"
            android:layout_gravity="center"
            android:textColor="#FF4500"
            android:textSize="25dp"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>

<!--    <ImageView-->
<!--        android:id="@+id/iv"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:src="@drawable/scale" />-->

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_image1"
        android:layout_width="52dp"
        android:layout_height="44dp"
        android:layout_above="@+id/ll_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="50dp"
        app:cardCornerRadius="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/image_one"
            android:visibility="visible" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/iv_image2"
        android:layout_width="52dp"
        android:layout_height="44dp"
        android:layout_above="@+id/ll_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="50dp"
        android:layout_toLeftOf="@+id/iv_image1"
        app:cardCornerRadius="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/images_two"
            android:visibility="visible" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="52dp"
        android:layout_height="44dp"
        android:layout_below="@+id/iv_image2"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="50dp"
        android:layout_toStartOf="@+id/ll_layout"
        app:cardCornerRadius="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/images_three"
            android:visibility="visible" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_image3"
        android:layout_width="52dp"
        android:layout_height="44dp"
        android:layout_above="@+id/ll_layout"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="50dp"
        app:cardCornerRadius="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/images_four"
            android:visibility="visible" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="52dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/iv_image3"
        app:cardCornerRadius="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/images_five"
            android:visibility="visible" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="52dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_layout"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/images_six"
            android:visibility="visible" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/findMarket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="Find nearest located Market"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold" />

</RelativeLayout>